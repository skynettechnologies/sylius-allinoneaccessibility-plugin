    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get initial state from a hidden field or radio
            const isCustomPosition = document.querySelector('input[name="is_widget_custom_position"]:checked')?.value || "0";

            const customPos1 = document.querySelector(".edit-is-widget-custom-position-1");
            const customPos0 = document.querySelector(".edit-is-widget-custom-position-0");

            // Set initial visibility
            if (isCustomPosition === "1") {
                customPos1?.classList.remove("hide");
                customPos1?.style.setProperty("display", "block");
                customPos0?.classList.add("hide");
                customPos0?.style.setProperty("display", "none");
            } else {
                customPos0?.classList.remove("hide");
                customPos0?.style.setProperty("display", "block");
                customPos1?.classList.add("hide");
                customPos1?.style.setProperty("display", "none");
            }

            // Toggle on switch click
            const customPositionBtn = document.getElementById("custom-position-switcher");
            if (customPositionBtn) {
                customPositionBtn.addEventListener("click", () => {
                    const isNowCustom = customPositionBtn.checked;

                    if (isNowCustom) {
                        customPos1?.classList.remove("hide");
                        customPos1?.style.setProperty("display", "block");
                        customPos0?.classList.add("hide");
                        customPos0?.style.setProperty("display", "none");
                    } else {
                        customPos0?.classList.remove("hide");
                        customPos0?.style.setProperty("display", "block");
                        customPos1?.classList.add("hide");
                        customPos1?.style.setProperty("display", "none");
                    }
                });
            }

            // Custom size toggle
            const customSizeBtn = document.getElementById("custom-size-switcher");
            if (customSizeBtn) {
                customSizeBtn.addEventListener("click", () => {
                    document.querySelector(".custom-size-controls")?.classList.toggle("hide");
                    document.querySelector(".widget-icon")?.classList.toggle("hide");
                });
            }
        });
    </script>
